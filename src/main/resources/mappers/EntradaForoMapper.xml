<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="edu.eci.pdsw.samples.persistence.mybatisimpl.mappers.EntradaForoMapper">
    <select id="getEntradasForo" resultMap="EntradaForoResult">
        select ef.id as ef_id , ef.fecha_hora as ef_fecha_hora, ef.contenido as ef_contenido , cm.id as cm_id, cm.fecha_hora as cm_fecha_hora, cm.contenido as cm_contenido, autor.nombre as autor_nombre, autor.email as autor_email, autorcom.nombre as cm_nombre,  autorcom.email as cm_email
        from ENTRADAS_FOROS as ef 
        INNER JOIN COMENTARIOS as cm ON ef.'id' = cm.'ENTRADAS_FOROS_id' 
        INNER JOIN USUARIOS as autor ON autor.email=ef.USUARIOS_email
        INNER JOIN USUARIOS as autorcom ON autorcom.email=cm.USUARIOS_email
    </select>
    <resultMap type= 'EntradaForo' id= 'EntradaForoResut'>
        <id property = 'identificador' column ='id'/>
        <association property = 'autor' javaType ='Usuario'columnPrefix='ef_'></association>
        <result property = 'comentario' column ='Contenido'/>
        <result property = 'titulo' column ='Contenido'/>
        <result property = 'fechayHora' column ='Fecha_Hora'/>
        <collection property='autor' ofType='Comentario'resultMap='ComentarioResult'columnPrefix='ef_'></collection>
    </resultMap>
    
    <resultMap type= 'Comentario' id= 'ComentarioResult'>
        <association property = 'autor' javaType ='Usuario' columnPrefix='cm_'></association>
        <result property = 'comentario' column ='Contenido' />
        <result property = 'fechayHora' column ='Fecha_Hora'/>
    </resultMap>
    
    <resultMap type= 'Usuario' id= 'UsuariosResult'>
        <association property = 'autor' javaType ='Usuario'columnPrefix='autor_'></association>
        <result property = 'email' column ='Email'/>
    </resultMap>   
  	
</mapper>